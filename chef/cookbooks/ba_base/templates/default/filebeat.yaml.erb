filebeat:
  prospectors:
    -
      paths:
        - /var/log/nginx/*.log
      input_type: log
      document_type: nginx_logs
    -
      paths:
        - /var/log/messages
        - /var/log/syslog
      input_type: log
      document_type: system_logs
    -
      paths:
        - /var/log/secure
        - /var/log/auth.log
      input_type: log
      document_type: secure_logs
  registry_file: /var/lib/filebeat/registry

output:
  logstash:
    hosts: ["<%= @logstash_host %>"]
    tls:
      certificate_authorities: ["<%= @ca_location %>"]
